<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="MTGHelper.Resources.Styles.SettingsLifeTotalDictionary"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style x:Key="imageButtonSetting" TargetType="ImageButton">
        <Setter Property="WidthRequest" Value="50" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>
    <Style x:Key="mainSettingsStackPanelStyle" TargetType="HorizontalStackLayout">
        <Setter Property="Spacing" Value="20" />
    </Style>
    <Style x:Key="buttonLifeSetStyle" TargetType="Button">
        <Setter Property="WidthRequest" Value="60" />
        <Setter Property="HeightRequest" Value="60" />
        <Setter Property="BackgroundColor" Value="Black" />
        <Setter Property="CornerRadius" Value="15" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="25" />
    </Style>
</ResourceDictionary>