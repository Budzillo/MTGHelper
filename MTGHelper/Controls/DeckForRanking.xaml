<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MTGHelper.Controls.DeckForRanking"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Border Margin="5">
        <HorizontalStackLayout x:Name="horizontalStackLayoutMain">
            <Image x:Name="imageCommander" ZIndex="0" />
            <Label x:Name="labelCommanderName" ZIndex="9999" />
            <Label x:Name="labelPowerLevel" ZIndex="9999" />
            <HorizontalStackLayout
                x:Name="horizontalStackLayoutColors"
                HorizontalOptions="End"
                ZIndex="9999" />
        </HorizontalStackLayout>
    </Border>
</ContentView>
