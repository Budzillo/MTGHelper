<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MTGHelper.Views.RollDiceD6Content"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:MTGHelper.ViewModels">
    <ContentView.BindingContext>
        <viewModels:LifeCounterPageViewModel />
    </ContentView.BindingContext>
    <Grid HorizontalOptions="Center" VerticalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border
            Margin="5"
            BackgroundColor="White"
            HeightRequest="100"
            Stroke="Black"
            StrokeThickness="3"
            WidthRequest="100">
            <Label
                HorizontalOptions="Center"
                Text="{Binding DiceRollModel.DiceValue}"
                VerticalOptions="Center" />
        </Border>
        <Label
            Grid.Row="1"
            HorizontalOptions="Center"
            Text="{Binding DiceRollModel.DiceValueInformation}"
            VerticalOptions="Center" />
    </Grid>
</ContentView>
