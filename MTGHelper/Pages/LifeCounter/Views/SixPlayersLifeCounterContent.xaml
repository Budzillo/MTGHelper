<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MTGHelper.Pages.LifeCounter.Views.SixPlayersLifeCounterContent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:MTGHelper.ViewModels"
    HorizontalOptions="Fill"
    VerticalOptions="Fill">
    <ContentView.BindingContext>
        <viewModels:SixPlayersLifeCounterContentViewModel />
    </ContentView.BindingContext>
    <Grid
        BackgroundColor="Wheat"
        HorizontalOptions="Fill"
        VerticalOptions="Fill">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ContentView
            Grid.Row="0"
            Grid.Column="0"
            Content="{Binding TopLeftHorizontalPlayerLifeContent}"
            HorizontalOptions="Fill"
            Rotation="0"
            VerticalOptions="Fill" />
        <ContentView
            Grid.Row="0"
            Grid.Column="1"
            Content="{Binding TopRightHorizontalPlayerLifeContent}"
            HorizontalOptions="Fill"
            Rotation="0"
            VerticalOptions="Fill" />
        <ContentView
            Grid.Row="1"
            Grid.Column="0"
            Content="{Binding CenterLeftHorizontalPlayerLifeContent}"
            HorizontalOptions="Fill"
            Rotation="0"
            VerticalOptions="Fill" />
        <ContentView
            Grid.Row="1"
            Grid.Column="1"
            Content="{Binding CenterRightHorizontalPlayerLifeContent}"
            HorizontalOptions="Fill"
            Rotation="0"
            VerticalOptions="Fill" />
        <ContentView
            Grid.Row="2"
            Grid.Column="0"
            Content="{Binding BottomLeftHorizontallayerLifeContent}"
            HorizontalOptions="Fill"
            Rotation="0"
            VerticalOptions="Fill" />
        <ContentView
            Grid.Row="2"
            Grid.Column="1"
            Content="{Binding BottomRightHorizontalPlayerLifeContent}"
            HorizontalOptions="Fill"
            Rotation="0"
            VerticalOptions="Fill" />
    </Grid>
</ContentView>
