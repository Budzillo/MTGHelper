<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MTGHelper.Views.ThreePlayersLifeCounterContent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:MTGHelper.ViewModels">
    <ContentView.BindingContext>
        <viewModels:ThreePlayersLifeCounterContentViewModel />
    </ContentView.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ContentView
            Grid.Row="0"
            Grid.Column="0"
            Content="{Binding BottomVerticalPlayerLifeContent}"
            HorizontalOptions="Fill"
            Rotation="180"
            VerticalOptions="Fill" />
        <ContentView
            Grid.Row="1"
            Grid.Column="0"
            Content="{Binding TopVerticalPlayerLifeContent}"
            HorizontalOptions="Fill"
            VerticalOptions="Fill" />
        <ContentView
            Grid.RowSpan="2"
            Grid.Column="1"
            Content="{Binding RightVerticalPlayerLifeContent}"
            HorizontalOptions="Fill"
            Rotation="180"
            VerticalOptions="Fill" />
    </Grid>
</ContentView>
